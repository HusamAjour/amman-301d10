<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>To-Do List</title>
  </head>


  <body>

    <header>
      <h1>My To-Do List</h1>
      <%- include('layout/navbar') %>
    </header>

    <main>
      <section>
        <ul>
              <li>
                <h4>Task: <%= taskInfo.title %></h4>
                <p>Status: <%= taskInfo.status %></p>
                <p>Description: <%= taskInfo.description %></p>
                <p>Contact: <%= taskInfo.contact %></p>
                <p>Category: <%= taskInfo.category %></p>
              </li>
        </ul>
      </section>
    </main>

  </body>
</html>
